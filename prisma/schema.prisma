// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum EmailImportStatus {
  IMPORTED
  ARCHIVED
  TRASHED
}

enum EmailActionType {
  ARCHIVE
  TRASH
  UNSUBSCRIBE_ATTEMPT
}

enum EmailActionStatus {
  PENDING
  SUCCEEDED
  FAILED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts      Account[]
  sessions      Session[]

  gmailAccounts GmailAccount[]
  categories    Category[]
  emails        EmailMessage[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// NextAuth.js models (Prisma Adapter)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  expires_in        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model GmailAccount {
  id            String   @id @default(cuid())
  userId        String
  email         String
  googleSub     String

  // Stored tokens for Gmail API access
  refreshToken  String
  accessToken   String?
  tokenExpiry   DateTime?

  // Sync bookkeeping
  lastHistoryId String?
  lastSyncedAt  DateTime?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  emails        EmailMessage[]

  @@unique([userId, email])
  @@unique([userId, googleSub])
}

model Category {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  emails      EmailMessage[]

  @@unique([userId, name])
}

model EmailMessage {
  id              String           @id @default(cuid())
  userId          String
  gmailAccountId  String
  categoryId      String

  gmailMessageId  String
  gmailThreadId   String?
  internalDateMs  BigInt?

  fromName        String?
  fromEmail       String?
  subject         String?
  snippet         String?

  bodyText        String?
  bodyHtml        String?

  summary         String?
  importStatus    EmailImportStatus @default(IMPORTED)

  // Unsubscribe helpers
  listUnsubscribe String?
  unsubscribeLinks Json?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  gmailAccount   GmailAccount @relation(fields: [gmailAccountId], references: [id], onDelete: Cascade)
  category       Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  actions        EmailAction[]

  @@unique([gmailAccountId, gmailMessageId])
  @@index([userId, categoryId, createdAt])
}

model EmailAction {
  id            String           @id @default(cuid())
  emailMessageId String
  type          EmailActionType
  status        EmailActionStatus @default(PENDING)
  details       Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  email         EmailMessage @relation(fields: [emailMessageId], references: [id], onDelete: Cascade)

  @@index([emailMessageId, createdAt])
}
